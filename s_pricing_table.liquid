<div class="spricing-table__wrap">
  <div class="spricing-table__content">
    {% if section.settings.title != blank %}
    <h2 class="spricing-table__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
    <h4 class="spricing-table__subtitle">{{ section.settings.subtitle }}</h4>
    {% endif %}
    <div class="spricings spricings--{{section.settings.layout}}">
      {% assign featured = section.settings.featured | plus: 0 %}
      {% for block in section.blocks %}
      <div class="spricing-wr spricing-wr--{{section.settings.items}}" {{ block.shopify_attributes }}>
        <div class="spricing-plan {% if forloop.index == featured %}featured{% endif %}">
          <div class="spricing-head">
            {% if block.settings.title != blank %}
            <div class="name">
              {{block.settings.title}}
            </div>
            {% endif %}
            <div class="sprice">
              <span class="value">
                {{block.settings.price | default: '0'}}
              </span>
              {% if block.settings.duration != blank %}
              <span class="duration">
                {{block.settings.duration}}
              </span>
              {% endif %}
            </div>
            {% if forloop.index == featured and section.settings.featured_text != blank %}
            <div class="sbadge">
              {{section.settings.featured_text}}
            </div>
            {% endif %}
          </div>
          <div class="spricing-body">
            <ul>
              {% for i in (1..6) %}
              {% assign description = 'description' | append:i %}
              {% assign support = 'support' | append:i %}
              {% if block.settings[description] != blank %}
              <li>
                {% if block.settings[support] %}
                <svg aria-hidden="true" data-prefix="fas" data-icon="check" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z" class=""></path></svg>
                {% else %}
                <svg aria-hidden="true" data-prefix="fas" data-icon="times" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 352 512" class="svg--remove"><path fill="currentColor" d="M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z" class=""></path></svg>
                {% endif %}
                {{block.settings[description]}}
              </li>
              {% endif %}
              {% endfor %}
            </ul>
          </div>
          {% if block.settings.btn_text != blank %}
          <div class="spricing-footer">
            <a href="{{block.settings.btn_link | default: '#'}}" title="{{block.settings.title}}" class="s-button">{{block.settings.btn_text}}</a>
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
