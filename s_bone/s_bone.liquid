      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Text",
        "default": "Section subheading"
      },
      {
        "type": "color",
        "id": "subtitle_cl",
        "label": "Color",
        "default": "#3d4246"
      },
      {
        "type": "font_picker",
        "id": "subtitle_font",
        "label": "Font",
        "default": "alegreya_sans_n4"
      },
      {
        "type": "textarea",
        "id": "subtitle_style",
        "label": "Custom style",
