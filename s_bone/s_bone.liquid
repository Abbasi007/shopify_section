        "info": "[How to CSS text?](https:\/\/www.w3schools.com\/css\/css_text.asp)"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Banner",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Block title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "SBone",
        "category": "# Shopify section",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}