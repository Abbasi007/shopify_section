<div class="sbone__wrap">
  <div class="sbone__content">
    {% if section.settings.title != blank %}
    <h2 class="sbone__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
    <h4 class="sbone__subtitle">{{ section.settings.subtitle }}</h4>
    {% endif %}
    <div>
      {% comment %} CONTENT HERE {% endcomment %}
      {% for block in section.blocks %}
      <div class="sbone-item" {{ block.shopify_attributes }}>
        {{block.settings.title}}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% style %}
  {% comment %}========================   CSS Liquid ========================{% endcomment %}
  
  {% comment %} Gerenal setting {% endcomment %}
  {% assign title_font = section.settings.title_font %}
  {% assign subtitle_font = section.settings.subtitle_font %}
  {{ title_font | font_face }}
  {{ subtitle_font | font_face }}
  #shopify-section-{{section.id}} .sbone__title{font-family:{{title_font.family}};color:{{section.settings.title_cl}};{{section.settings.title_style}}}
  #shopify-section-{{section.id}} .sbone__subtitle{font-family:{{subtitle_font.family}};color:{{section.settings.subtitle_cl}};{{section.settings.subtitle_style}}}
  #shopify-section-{{section.id}} .sbone__wrap{margin-top:{{section.settings.margin_top}}px;margin-bottom:{{section.settings.margin_bottom}}px;padding-top:{{section.settings.padding_top}}px;padding-bottom:{{section.settings.padding_bottom}}px;background-color:{{section.settings.bg_color}};{% if section.settings.bg_image %}background-image:url({{section.settings.bg_image | img_url:'master'}});{% if section.settings.bg_attachment %}background-attachment:fixed;{% endif %}background-repeat:no-repeat;background-position:center;{% endif %}}
  #shopify-section-{{section.id}} .sbone__content{max-width:{{section.settings.max_width}}px;margin:0 auto;}
 
{% endstyle %}

{% schema %}
  {
    "name": "Shopify SBone",
    "class": "index-section",
    "max_blocks": 100,
    "settings": [
      {
        "type": "header",
        "content": "Background"
