{% style %}
  {% for block in section.blocks %}
  {{block.settings.selector}}{
    {% if block.settings.color != '' %}
    	color:{{block.settings.color}} !important;
    {% endif %}
    
    {% if block.settings.bg_color != '' %}
    	background-color:{{block.settings.bg_color}} !important;
    {% endif %}
    
    {% if block.settings.bd_color != '' %}
    	border:1px solid {{block.settings.bd_color}} !important;
    {% endif %}
  }
  {% endfor %}
{% endstyle %}
